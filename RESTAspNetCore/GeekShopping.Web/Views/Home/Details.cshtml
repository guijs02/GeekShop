@model ProductViewModel

<form method="post">
    <input asp-for="Id" hidden />
    <div class="card container" style="border:1px solid #808080">
        <div class="card-header text-light row" style="border-radius:0px;">
            <div class="col-12 col-md-6 ">
                <h1 class="text-dark">@Model.Nome</h1>
            </div>
            <div class="col-12 col-md-6 text-end">
                <h1 class="text-warning">@((Model.Preco).ToString("c"))</h1>
            </div>
        </div>
    </div>
    <div class="card-body">

        <div class="container rounded p-2">
            <div class="row">
                <div class="col-12 col-lg-4 p-1 text-center">
                    <img src="@Model.ImageURL" style="border-radius: 35px;" width="100%" class="rounded" />
                </div>
                <div class="col-12 col-lg-8">
                    <div class="row pl-3">
                        <div class="col-12">
                            <span class="badge badge-primary text-success p-3 border">
                                @Model.Categoria
                            </span>
                            <h3 class="text-success"></h3>
                            <p class="text-secondary">@Model.Descricao</p>
                        </div>
                    </div>
                    <div class="row px-4">
                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer row">
        <div class="col-12 col-md-6 pb-1">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Voltar</a>
        </div>
        <div class="col-12 col-md-6 ">
            <button type="submit" value="Delete" class="btn-primary form-control btn-lg" style="height:50px;">Add to Cart</button>
        </div>
    </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}